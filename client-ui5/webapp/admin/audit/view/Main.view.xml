<mvc:View
    controllerName="audit.app.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    displayBlock="true">
    
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader class="bannerHeader">
                <Button icon="sap-icon://menu2" type="Transparent" press="onMenuPress"/>
                <Title text="Auditoría" level="H2"/>
                <ToolbarSpacer/>
                <Button icon="{ui>/themeIcon}" type="Transparent" press="onThemeToggle"/>
                <Button icon="sap-icon://home" type="Transparent" press="onNavHome" tooltip="Inicio"/>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <tnt:SideNavigation selectedKey="auditLog" itemSelect="onItemSelect">
                <tnt:NavigationList>
                    <tnt:NavigationListItem text="Auditoría" icon="sap-icon://shield" key="auditLog"/>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        
        <tnt:mainContents>
            <NavContainer id="auditNavContainer">
                <pages>
                    <!-- Filled by Router -->
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
