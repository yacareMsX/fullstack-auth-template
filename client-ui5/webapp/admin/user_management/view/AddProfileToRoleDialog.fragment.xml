<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		id="addProfileDialog"
		noDataText="{i18n>noProfilesFound}"
		title="{i18n>selectProfilesToAdd}"
		search="onProfileSearch"
		confirm="onAddProfileConfirm"
		cancel="onAddProfileCancel"
		multiSelect="true"
		items="{
			path: '/allProfiles',
			sorter: {
				path: 'name',
				descending: false
			}
		}">
		<columns>
			<Column>
				<header>
					<Text text="{i18n>roleProfileName}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<header>
					<Text text="{i18n>roleProfileDescription}" />
				</header>
			</Column>
		</columns>
		<ColumnListItem>
			<cells>
				<Title text="{name}" />
				<Text text="{description}" />
			</cells>
		</ColumnListItem>
	</TableSelectDialog>
</core:FragmentDefinition>
