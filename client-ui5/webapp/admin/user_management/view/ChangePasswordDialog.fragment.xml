<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog title="{i18n>changePasswordTitle}">
        <content>
            <form:SimpleForm editable="true" layout="ResponsiveGridLayout">
                <form:content>
                    <Label text="{i18n>newPassword}" required="true"/>
                    <Input id="newPasswordInput" type="Password" value="{changePassword>/newPassword}"/>
                    <Label text="{i18n>confirmPassword}" required="true"/>
                    <Input id="confirmPasswordInput" type="Password" value="{changePassword>/confirmPassword}"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button text="{i18n>save}" type="Emphasized" press="onSavePassword"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onCancelPassword"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
