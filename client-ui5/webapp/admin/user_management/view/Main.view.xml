<mvc:View
    controllerName="user.management.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    displayBlock="true">
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader class="bannerHeader">
                <Button icon="sap-icon://menu2" type="Transparent" press="onMenuPress" tooltip="{i18n>menu}" class="sapUiSmallMarginEnd"/>
                <Button icon="sap-icon://nav-back" type="Transparent" press="onNavHome" tooltip="{i18n>backToHome}" class="sapUiSmallMarginEnd"/>
                <Title text="{i18n>headerTitle}" level="H2" class="sapUiSmallMarginBegin"/>
                <ToolbarSpacer/>
                <Button icon="{ui>/themeIcon}" type="Transparent" press="onThemeToggle" tooltip="{i18n>toggleTheme}" class="sapUiSmallMarginEnd"/>
                <Button icon="sap-icon://search" type="Transparent" tooltip="{i18n>search}"/>
                <Button icon="sap-icon://sys-help-2" type="Transparent" tooltip="{i18n>help}"/>
                <Button icon="sap-icon://bell" type="Transparent" tooltip="{i18n>notifications}"/>
                <Avatar src="../../../img/profile_pic.png" displaySize="XS" class="sapUiSmallMarginBegin" tooltip="{i18n>profile}"/>
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation itemSelect="onItemSelect">
                <tnt:NavigationList>
                    <tnt:NavigationListItem text="{i18n>usersAndRoles}" icon="sap-icon://user-settings" expanded="true">
                        <tnt:NavigationListItem text="{i18n>users}" key="users"/>
                        <tnt:NavigationListItem text="{i18n>roles}" key="roles"/>
                        <tnt:NavigationListItem text="{i18n>profiles}" key="profiles"/>
                        <tnt:NavigationListItem text="{i18n>authObjects}" key="auth"/>
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="{i18n>countryManagement}" icon="sap-icon://world" expanded="true">
                    <tnt:NavigationListItem text="{i18n>countriesConfig}" key="countries"/>
                    </tnt:NavigationListItem>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <NavContainer id="userMgmtNavContainer" initialPage="detailUnderConstruction">
                <Page id="detailUnderConstruction" title="Detalle">
                    <content>
                        <MessagePage
                            text="{i18n>underConstruction}"
                            description="{i18n>underConstructionDesc}"
                            icon="sap-icon://construction"
                            showHeader="false"/>
                    </content>
                </Page>
                <mvc:XMLView id="usersDetail" viewName="user.management.view.Users"/>
                <mvc:XMLView id="userDetailInfo" viewName="user.management.view.UserDetail"/>
                <mvc:XMLView id="rolesDetail" viewName="user.management.view.Roles"/>
                <mvc:XMLView id="roleDetailInfo" viewName="user.management.view.RoleDetail"/>
                <mvc:XMLView id="authDetail" viewName="user.management.view.AuthObjects"/>
                <mvc:XMLView id="profilesDetail" viewName="user.management.view.RolProfiles"/>
                <mvc:XMLView id="rolProfileDetailInfo" viewName="user.management.view.RolProfileDetail"/>
                <mvc:XMLView id="countriesDetail" viewName="invoice.app.view.InvoiceCountriesList"/>
                <mvc:XMLView id="countryDetail" viewName="invoice.app.view.InvoiceCountryDetail"/>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
