<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">
    <ResponsivePopover
        title="{i18n>userProfile}"
        class="sapUiPopupWithPadding"
        placement="Bottom"
        showHeader="true">
        <content>
            <VBox alignItems="Center" class="sapUiMediumMargin">
                <Avatar
                    src="img/profile_pic.png"
                    displaySize="L"
                    class="sapUiMediumMarginBottom"/>
                <Title
                    text="{auth>/user/firstName} {auth>/user/lastName}"
                    level="H2"
                    class="sapUiTinyMarginBottom"/>
                <Text
                    text="{auth>/user/email}"
                    class="sapUiSmallMarginBottom textSecondary"/>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="{i18n>logout}"
                icon="sap-icon://log"
                type="Reject"
                press="onLogout"
                width="100%"/>
        </beginButton>
    </ResponsivePopover>
</core:FragmentDefinition>
