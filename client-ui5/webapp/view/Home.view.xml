<mvc:View
    controllerName="invoice.app.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    
    <Page showHeader="true" class="homePage">
        <customHeader>
            <Bar class="homeNavBar">
                <contentLeft>
                    <layout:HorizontalLayout>
                        <Link 
                            text="{i18n>sectionInvoices}" 
                            press="onSectionNavigate" 
                            class="homeNavButton">
                            <customData>
                                <core:CustomData key="section" value="invoices"/>
                            </customData>
                        </Link>
                        <Link 
                            text="{i18n>sectionReporting}" 
                            press="onSectionNavigate" 
                            class="homeNavButton">
                            <customData>
                                <core:CustomData key="section" value="reporting"/>
                            </customData>
                        </Link>
                        <Link 
                            text="{i18n>sectionStatutory}" 
                            press="onSectionNavigate" 
                            class="homeNavButton">
                            <customData>
                                <core:CustomData key="section" value="statutory"/>
                            </customData>
                        </Link>
                        <Link 
                            text="{i18n>globalConfiguration}" 
                            press="onSectionNavigate" 
                            class="homeNavButton">
                            <customData>
                                <core:CustomData key="section" value="userManagement"/>
                            </customData>
                        </Link>
                        <Link 
                            text="{i18n>processDesigner}" 
                            press="onSectionNavigate" 
                            class="homeNavButton">
                            <customData>
                                <core:CustomData key="section" value="processDesigner"/>
                            </customData>
                        </Link>
                    </layout:HorizontalLayout>
                </contentLeft>
            </Bar>
        </customHeader>
        <content>
            <ScrollContainer id="homeScrollContainer" height="100%" width="100%" vertical="true">
                <layout:VerticalLayout width="100%" class="sapUiContentPadding">
                    
                    <!-- Invoices Section -->
                    <VBox id="invoicesSection">
                        <Title text="{i18n>sectionInvoices}" level="H2" class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                        <layout:HorizontalLayout allowWrapping="true">
                            <GenericTile header="{i18n>tileEinvoiceFace}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://document-text"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tileTbai}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://official-service"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tileLeyCC}" press="onNavigateToDashboard" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://bbyd-dashboard"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tileEinvoicePolonia}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://world"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tileEinvoiceFrancia}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://world"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tileEinvoiceBelgica}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://world"/></TileContent>
                            </GenericTile>
                        </layout:HorizontalLayout>
                    </VBox>

                    <!-- Reporting Section -->
                    <VBox id="reportingSection">
                        <Title text="{i18n>sectionReporting}" level="H2" class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                        <layout:HorizontalLayout allowWrapping="true">
                            <GenericTile header="{i18n>tileSii}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://bar-chart"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tileVerifactu}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://receipt"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tileFranceReporting}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://line-chart"/></TileContent>
                            </GenericTile>
                        </layout:HorizontalLayout>
                    </VBox>

                    <!-- Statutory Reporting Section -->
                    <VBox id="statutorySection">
                        <Title text="{i18n>sectionStatutory}" level="H2" class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                        <layout:HorizontalLayout allowWrapping="true">
                            <GenericTile header="{i18n>tile301}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://form"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>tile322}" press="onGenericTilePress" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://form"/></TileContent>
                            </GenericTile>
                        </layout:HorizontalLayout>
                    </VBox>

                    <!-- Global Configuration Section -->
                    <VBox id="userManagementSection">
                        <Title text="{i18n>globalConfiguration}" level="H2" class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                        <layout:HorizontalLayout allowWrapping="true">
                            <GenericTile header="{i18n>userManagement}" press="onNavigateToUserManagement" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://user-settings"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>invoiceCountriesTitle}" press="onNavigateToCountries" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://world"/></TileContent>
                            </GenericTile>
                        </layout:HorizontalLayout>
                    </VBox>

                    <!-- Process Designer Section -->
                    <VBox id="processDesignerSection">
                        <Title text="{i18n>processDesigner}" level="H2" class="sapUiMediumMarginTop sapUiSmallMarginBottom"/>
                        <layout:HorizontalLayout allowWrapping="true">
                            <GenericTile header="{i18n>approvalProcesses}" press="onNavigateToWorkflow" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://process"/></TileContent>
                            </GenericTile>
                            <GenericTile header="{i18n>xmlDesign}" press="onNavigateToXmlDesign" class="sapUiTinyMarginBegin sapUiTinyMarginBottom">
                                <TileContent><ImageContent src="sap-icon://opportunity"/></TileContent>
                            </GenericTile>
                        </layout:HorizontalLayout>
                    </VBox>
                    
                </layout:VerticalLayout>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
