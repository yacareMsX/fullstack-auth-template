<mvc:View
    controllerName="invoice.app.controller.Login"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
    height="100%">
    
    <Page showHeader="false" enableScrolling="false" class="loginPage">
        <content>
            <FlexBox
                width="100%"
                height="100%"
                alignItems="Center"
                justifyContent="Center"
                direction="Column"
                class="loginContainer">
                
                <!-- Login Card -->
                <VBox 
                    width="400px"
                    class="loginCard sapUiLargeMargin">
                    
                    <!-- Logo -->
                    <VBox 
                        width="100%" 
                        alignItems="Center"
                        class="sapUiMediumMarginBottom">
                        <Image
                            src="https://www.t4sadvance.com/wp-content/uploads/2024/02/T4S-ONE-1-New2024_allwhite-V2.png"
                            width="200px"
                            class="sapUiSmallMarginBottom"/>
                        <Title 
                            text="Compliance Hub" 
                            level="H3"
                            class="loginTitle"/>
                    </VBox>
                    
                    <!-- Login Form -->
                    <VBox 
                        width="100%"
                        class="sapUiSmallMarginTop">
                        
                        <Label 
                            text="Email" 
                            required="true"
                            class="loginLabel"/>
                        <Input
                            id="emailInput"
                            type="Email"
                            placeholder="Enter your email"
                            value="{login>/email}"
                            required="true"
                            class="loginInput sapUiTinyMarginBottom"/>
                        
                        <Label 
                            text="Password" 
                            required="true"
                            class="loginLabel sapUiSmallMarginTop"/>
                        <Input
                            id="passwordInput"
                            type="Password"
                            placeholder="Enter your password"
                            value="{login>/password}"
                            required="true"
                            submit="onLogin"
                            class="loginInput sapUiTinyMarginBottom"/>
                        
                        <!-- Error Message -->
                        <MessageStrip
                            visible="{login>/error}"
                            text="{login>/errorMessage}"
                            type="Error"
                            showIcon="true"
                            class="sapUiSmallMarginTop sapUiSmallMarginBottom"/>
                        
                        <!-- Login Button -->
                        <Button
                            text="Login"
                            type="Emphasized"
                            width="100%"
                            press="onLogin"
                            enabled="{= !${login>/loading}}"
                            class="loginButton sapUiMediumMarginTop"/>
                        
                        <!-- Loading Indicator -->
                        <BusyIndicator
                            visible="{login>/loading}"
                            class="sapUiSmallMarginTop"/>
                        
                    </VBox>
                    
                </VBox>
                
            </FlexBox>
        </content>
    </Page>
</mvc:View>

