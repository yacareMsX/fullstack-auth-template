<mvc:View
    controllerName="invoice.app.controller.france.FranceScanInvoice"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:u="sap.ui.unified"
    xmlns:layout="sap.ui.layout">
    
    <Page title="{i18n>scanInvoiceTitle}">
        <content>
            <layout:VerticalLayout width="100%" class="sapUiContentPadding sapUiMediumMargin">
                <Title text="{i18n>scanInvoiceInstructions}" level="H3" class="sapUiMediumMarginBottom"/>
                
                <u:FileUploader
                    id="fileUploader"
                    name="invoiceFile"
                    uploadUrl=""
                    tooltip="{i18n>uploadTooltip}"
                    change="onFileChange"
                    fileType="jpg,png,pdf"
                    width="100%"
                    placeholder="{i18n>uploadPlaceholder}"/>
                
                <Button
                    id="scanButton"
                    text="{i18n>scanButton}"
                    type="Emphasized"
                    enabled="false"
                    press="onScan"
                    class="sapUiSmallMarginTop"/>
                    
            </layout:VerticalLayout>
        </content>
    </Page>
</mvc:View>
