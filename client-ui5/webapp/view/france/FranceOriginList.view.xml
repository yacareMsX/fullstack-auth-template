<mvc:View
    controllerName="invoice.app.controller.france.FranceOriginList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    
    <Page title="{i18n>origins}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table
                id="originsTable"
                items="{origins>/}"
                mode="None">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>origins}" level="H2"/>
                        <ToolbarSpacer/>
                        <Button text="{i18n>newOrigin}" type="Emphasized" icon="sap-icon://add" press="onCreateOrigin"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="ID"/>
                    </Column>
                    <Column>
                        <Text text="{i18n>originDescription}"/>
                    </Column>
                    <Column hAlign="End" width="100px">
                        <Text text=""/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{origins>id_origen}"/>
                            <Text text="{origins>descripcion}"/>
                            <HBox justifyContent="End">
                                <Button icon="sap-icon://edit" type="Transparent" press="onEditOrigin"/>
                                <Button icon="sap-icon://delete" type="Transparent" press="onDeleteOrigin"/>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
