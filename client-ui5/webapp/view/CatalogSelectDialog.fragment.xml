<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <TableSelectDialog
        id="catalogSelectDialog"
        noDataText="No products found"
        title="Select Product"
        search="onCatalogSearch"
        confirm="onCatalogConfirm"
        cancel="onCatalogCancel"
        items="{catalog>/products}"
        multiSelect="true">
        <ColumnListItem>
            <cells>
                <ObjectIdentifier title="{catalog>sku}"/>
                <Text text="{
                    parts: [
                        {path: 'catalog>nombre'},
                        {path: 'catalog>sku'}
                    ],
                    formatter: '.formatter.productName'
                }"/>
                <ObjectNumber
                    number="{
                        path: 'catalog>precio_base',
                        formatter: '.formatter.catalogPrice'
                    }"
                    unit="EUR"/>
            </cells>
        </ColumnListItem>
        <columns>
            <Column width="150px">
                <header>
                    <Text text="SKU"/>
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Description"/>
                </header>
            </Column>
            <Column width="100px" hAlign="End">
                <header>
                    <Text text="Price"/>
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>
