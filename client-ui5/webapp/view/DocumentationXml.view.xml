<mvc:View controllerName="invoice.app.controller.DocumentationXml"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core" displayBlock="true" height="100%">
    <Page title="Documentación XML" showNavButton="false">
        <headerContent>
            <Button text="Crear" type="Emphasized" icon="sap-icon://add" press="onDialogCreate"/>
            <Button text="Borrar" type="Reject" icon="sap-icon://delete" press="onDialogDelete" enabled="{= !!${view>/selectedItem} }"/>
        </headerContent>
        <content>
            <Table id="documentationTable" items="{doc>/}" mode="None" growing="true" growingThreshold="20">
                <columns>
                    <Column>
                        <Text text="Nombre Objeto" />
                    </Column>
                    <Column>
                        <Text text="Tipo de Estructura" />
                    </Column>
                    <Column>
                        <Text text="Formato" />
                    </Column>
                    <Column>
                        <Text text="Descripción" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onItemPress">
                        <cells>
                            <Text text="{doc>nombre_objeto}" />
                            <Text text="{doc>tipo_estructura}" />
                            <Text text="{doc>formato}" />
                            <Text text="{doc>descripcion}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
